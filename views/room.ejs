<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.css" rel="stylesheet" />

    <title><%= gameType %></title>
    <style>
        .container-540{
            width:540px;
            margin: auto;
        }
        @media screen and (max-width:576px) {
            .container-540{
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="container-540">
        <div class="text-center">
            <button type="button" class="btn btn-primary" onClick="GameStart();" disabled id="StartBtn"> Game Start!! </button>
        </div>
    </div>
    <%- include ('layout/board.html') %>

    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.js" ></script>
    <script src="https://cdn.socket.io/4.4.1/socket.io.min.js" integrity="sha384-fKnu0iswBIqkjxrhQCTZ7qlLHOFEgNkRmK2vaO/LbTZSXdJfAu6ewRBdwHPhBo/H" crossorigin="anonymous"></script>
    <script>
        const socket = io()
        socket.emit("join:room", 
            {
                gameType: "<%= gameType %>",
                //roomId: roomId
            }
        );

        //game board function

        //receive socket
        socket.on("game:ready", (data)=>{
            //if(user.IsRoomMaster)
            document.getElementById("StartBtn").disabled = false;
        })
        socket.on("game:init", (data)=>{
            console.log("Start!")
        })
        socket.on("game:placeStone-ACK", (data)=>{
            //if(data.accepted)
            //else
        })


        //socket function
        function GameStart(){
            socket.emit("game:roomMasterInit", "")
        }
        function PlaceStone(){
            socket.emit("game:placeStone", {})
        }


        function callbacked(){
            socket.emit("callback", {"id":1, "pw":222}, (res)=>{
                console.log(res);
            })
        }
        function orderCreate(){
            socket.emit("order:create", {"id":1, "pw":222})
        }
    </script>
</body>
</html>
